<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button">
        <item name="android:background">@drawable/background_radius_button</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="card_main_button">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="title_authentification">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="date_item_stadiums_fragment">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="title_item_stadiums_fragment">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="location_item_stadiums_fragment">
        <item name="android:textColor">@color/secondary_color</item>
        <item name="android:fontFamily">@font/roboto_thin_italic</item>
        <item name="android:textSize">13sp</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>